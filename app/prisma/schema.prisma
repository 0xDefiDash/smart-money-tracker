generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/smart_money_tracker/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String?   @unique
  name         String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  gameExp      Int       @default(0)
  gameLevel    Int       @default(1)
  isAdmin      Boolean   @default(false)
  password     String?
  profileImage String?
  username     String?   @unique
  gameMoney    Int       @default(0)
  xHandle      String?
  accounts     Account[]
  sessions     Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Cryptocurrency {
  id                String             @id @default(cuid())
  symbol            String             @unique
  name              String
  coinGeckoId       String             @unique
  marketCap         BigInt?
  price             Float?
  volume24h         Float?
  priceChange24h    Float?
  rank              Int?
  isActive          Boolean            @default(true)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  priceHistories    PriceHistory[]
  whaleTransactions WhaleTransaction[]

  @@map("cryptocurrencies")
}

model PriceHistory {
  id             String         @id @default(cuid())
  cryptoId       String
  price          Float
  marketCap      BigInt?
  volume         Float?
  timestamp      DateTime
  cryptocurrency Cryptocurrency @relation(fields: [cryptoId], references: [id], onDelete: Cascade)

  @@index([cryptoId, timestamp])
  @@map("price_histories")
}

model WhaleTransaction {
  id             String         @id @default(cuid())
  txHash         String         @unique
  blockNumber    BigInt?
  cryptoId       String
  fromAddress    String
  toAddress      String
  value          String
  valueUsd       Float
  gasUsed        BigInt?
  gasPrice       BigInt?
  timestamp      DateTime
  blockchain     String
  isAlert        Boolean        @default(false)
  alertThreshold Float?
  cryptocurrency Cryptocurrency @relation(fields: [cryptoId], references: [id], onDelete: Cascade)

  @@index([cryptoId, timestamp])
  @@index([valueUsd, timestamp])
  @@index([fromAddress])
  @@index([toAddress])
  @@map("whale_transactions")
}

model ExchangeFlow {
  id             String   @id @default(cuid())
  exchangeName   String
  cryptocurrency String
  flowType       String
  amount         String
  amountUsd      Float
  timestamp      DateTime

  @@index([exchangeName, cryptocurrency, timestamp])
  @@index([flowType, timestamp])
  @@map("exchange_flows")
}

model WalletWatch {
  id         String    @id @default(cuid())
  address    String    @unique
  label      String?
  blockchain String
  isWhale    Boolean   @default(false)
  balance    String?
  balanceUsd Float?
  lastActive DateTime?
  createdAt  DateTime  @default(now())

  @@index([blockchain, isWhale])
  @@map("wallet_watches")
}

model DailyReport {
  id                     String   @id @default(cuid())
  date                   DateTime @unique @db.Date
  totalWhaleTransactions Int      @default(0)
  totalWhaleVolumeUsd    Float    @default(0)
  topCryptoByVolume      String?
  largestTransactionUsd  Float?
  topExchangeInflow      String?
  topExchangeOutflow     String?
  marketSentiment        String?
  reportData             Json?
  createdAt              DateTime @default(now())

  @@map("daily_reports")
}

model AlertSubscription {
  id               String   @id @default(cuid())
  email            String
  alertType        String
  thresholdUsd     Float?
  cryptocurrencies String[]
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())

  @@map("alert_subscriptions")
}

model BlockTransaction {
  id              String   @id @default(cuid())
  playerId        String
  playerName      String?
  blockId         String
  blockName       String
  blockType       String
  blockRarity     String
  transactionType String
  price           Int?
  value           Int
  timestamp       DateTime @default(now())

  @@index([timestamp])
  @@index([playerId])
  @@map("block_transactions")
}

// ============ Dash TV / Streaming Models ============

model StreamerProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  displayName     String
  username        String   @unique
  bio             String?
  avatar          String?
  bannerImage     String?
  twitterHandle   String?
  telegramHandle  String?
  discordHandle   String?
  websiteUrl      String?
  category        String?
  isVerified      Boolean  @default(false)
  followersCount  Int      @default(0)
  followingCount  Int      @default(0)
  totalStreams    Int      @default(0)
  totalViews      Int      @default(0)
  totalLikes      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  streams         Stream[]
  videos          Video[]
  likes           Like[]
  comments        Comment[]
  followers       Follow[]  @relation("Followers")
  following       Follow[]  @relation("Following")
  tipsReceived    Tip[]     @relation("ReceivedTips")
  walletConnection WalletConnection?
  
  @@map("streamer_profiles")
  @@index([username])
  @@index([userId])
}

model Stream {
  id              String   @id @default(cuid())
  streamerId      String
  title           String
  description     String?
  category        String
  thumbnailUrl    String?
  isLive          Boolean  @default(false)
  viewerCount     Int      @default(0)
  peakViewers     Int      @default(0)
  likesCount      Int      @default(0)
  commentsCount   Int      @default(0)
  startedAt       DateTime @default(now())
  endedAt         DateTime?
  duration        Int?
  streamKey       String?  @unique
  
  streamer        StreamerProfile @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  likes           Like[]
  comments        Comment[]
  tips            Tip[]
  
  @@map("streams")
  @@index([streamerId])
  @@index([isLive])
  @@index([startedAt])
}

model Video {
  id              String   @id @default(cuid())
  streamerId      String
  title           String
  description     String?
  category        String
  thumbnailUrl    String?
  videoUrl        String
  duration        Int
  viewsCount      Int      @default(0)
  likesCount      Int      @default(0)
  commentsCount   Int      @default(0)
  isPublic        Boolean  @default(true)
  tags            String[] @default([])
  uploadedAt      DateTime @default(now())
  
  streamer        StreamerProfile @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  likes           Like[]
  comments        Comment[]
  tips            Tip[]
  
  @@map("videos")
  @@index([streamerId])
  @@index([uploadedAt])
}

model Like {
  id              String   @id @default(cuid())
  userId          String
  streamId        String?
  videoId         String?
  createdAt       DateTime @default(now())
  
  user            StreamerProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  stream          Stream?         @relation(fields: [streamId], references: [id], onDelete: Cascade)
  video           Video?          @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  @@map("likes")
  @@index([videoId])
  @@index([streamId])
  @@index([userId])
}

model Comment {
  id              String   @id @default(cuid())
  userId          String
  streamId        String?
  videoId         String?
  content         String
  parentId        String?
  createdAt       DateTime @default(now())
  
  user            StreamerProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  stream          Stream?         @relation(fields: [streamId], references: [id], onDelete: Cascade)
  video           Video?          @relation(fields: [videoId], references: [id], onDelete: Cascade)
  parent          Comment?        @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies         Comment[]       @relation("CommentReplies")
  
  @@map("comments")
  @@index([videoId])
  @@index([streamId])
  @@index([userId])
  @@index([parentId])
  @@index([createdAt])
}

model Follow {
  id              String   @id @default(cuid())
  followerId      String
  followingId     String
  createdAt       DateTime @default(now())
  
  follower        StreamerProfile @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following       StreamerProfile @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  
  @@unique([followerId, followingId])
  @@map("follows")
  @@index([followerId])
  @@index([followingId])
}

model Tip {
  id              String   @id @default(cuid())
  fromUserId      String?
  toStreamerId    String
  streamId        String?
  videoId         String?
  amount          Float
  cryptocurrency  String
  amountUsd       Float
  walletAddress   String?
  message         String?
  txHash          String?
  status          String   @default("completed")
  completedAt     DateTime?
  createdAt       DateTime @default(now())
  
  recipient       StreamerProfile @relation("ReceivedTips", fields: [toStreamerId], references: [id], onDelete: Cascade)
  stream          Stream?         @relation(fields: [streamId], references: [id], onDelete: Cascade)
  video           Video?          @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  @@map("tips")
  @@index([toStreamerId])
  @@index([streamId])
  @@index([videoId])
  @@index([createdAt])
}

model WalletConnection {
  id                      String   @id @default(cuid())
  userId                  String?
  streamerId              String   @unique
  walletAddress           String
  walletType              String
  blockchain              String
  qrCode                  String?
  isVerified              Boolean  @default(false)
  isActive                Boolean  @default(true)
  totalTipsReceived       Float    @default(0)
  totalTipsReceivedUsd    Float    @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  streamer                StreamerProfile @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  
  @@map("wallet_connections")
  @@index([streamerId])
  @@index([walletAddress])
}

// ============ CA Detector Models ============

model ContractScan {
  id                      String   @id @default(cuid())
  contractAddress         String
  blockchain              String
  contractName            String?
  contractSymbol          String?
  riskScore               Int
  riskLevel               String
  isVerified              Boolean  @default(false)
  totalSupply             String?
  contractAge             String?
  holdersCount            Int      @default(0)
  liquidityUsd            Float    @default(0)
  scanCount               Int      @default(1)
  lastScannedAt           DateTime @default(now())
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  @@unique([contractAddress, blockchain])
  @@map("contract_scans")
  @@index([riskScore])
  @@index([scanCount])
  @@index([lastScannedAt])
  @@index([blockchain])
}

// ============ Shot Callers / KOL Tracking Models ============

model KOLProfile {
  id                      String   @id @default(cuid())
  username                String   @unique
  displayName             String
  twitterUserId           String?  @unique
  profileImageUrl         String?
  followersCount          Int      @default(0)
  followingCount          Int      @default(0)
  tweetCount              Int      @default(0)
  isVerified              Boolean  @default(false)
  isTracked               Boolean  @default(true)
  category                String?
  influenceScore          Int      @default(0)
  bio                     String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  lastFetchedAt           DateTime?
  
  tweets                  KOLTweet[]
  tokenCalls              TokenCall[]
  stats                   KOLStats?
  
  @@map("kol_profiles")
  @@index([username])
  @@index([isTracked])
  @@index([influenceScore])
}

model KOLTweet {
  id                      String   @id @default(cuid())
  kolId                   String
  tweetId                 String   @unique
  content                 String
  createdAt               DateTime
  likeCount               Int      @default(0)
  retweetCount            Int      @default(0)
  replyCount              Int      @default(0)
  quoteCount              Int      @default(0)
  category                String?
  coins                   String[] @default([])
  hashtags                String[] @default([])
  mentions                String[] @default([])
  isAlert                 Boolean  @default(false)
  sentiment               String?
  fetchedAt               DateTime @default(now())
  
  kol                     KOLProfile @relation(fields: [kolId], references: [id], onDelete: Cascade)
  tokenCalls              TokenCall[]
  
  @@map("kol_tweets")
  @@index([kolId])
  @@index([createdAt])
  @@index([category])
  @@index([isAlert])
  @@index([likeCount])
}

model TokenCall {
  id                      String   @id @default(cuid())
  kolId                   String
  tweetId                 String
  tokenSymbol             String
  tokenName               String?
  tokenAddress            String?
  callPrice               Float?
  currentPrice            Float?
  priceChange             Float?
  roi                     Float?
  sentiment               String   @default("neutral")
  calledAt                DateTime @default(now())
  lastCheckedAt           DateTime @default(now())
  isWin                   Boolean?
  targetDays              Int      @default(7)
  
  kol                     KOLProfile @relation(fields: [kolId], references: [id], onDelete: Cascade)
  tweet                   KOLTweet @relation(fields: [tweetId], references: [tweetId], onDelete: Cascade)
  
  @@map("token_calls")
  @@index([kolId])
  @@index([tokenSymbol])
  @@index([calledAt])
  @@index([sentiment])
  @@index([isWin])
  @@unique([tweetId, tokenSymbol])
}

model KOLStats {
  id                      String   @id @default(cuid())
  kolId                   String   @unique
  totalCalls              Int      @default(0)
  successfulCalls         Int      @default(0)
  failedCalls             Int      @default(0)
  pendingCalls            Int      @default(0)
  winRate                 Float    @default(0)
  averageROI              Float    @default(0)
  bestCall                Float?
  worstCall               Float?
  totalFollowers          Int      @default(0)
  lastUpdated             DateTime @default(now())
  
  kol                     KOLProfile @relation(fields: [kolId], references: [id], onDelete: Cascade)
  
  @@map("kol_stats")
  @@index([winRate])
  @@index([totalCalls])
}

// ============ Shot Callers Engagement Models ============

model KOLWallet {
  id                      String   @id @default(cuid())
  kolUsername             String   @unique
  ethAddress              String?
  bnbAddress              String?
  solAddress              String?
  usdcEthAddress          String?
  usdcBnbAddress          String?
  usdcSolAddress          String?
  preferredCurrency       String   @default("ETH")
  qrCodeUrl               String?
  isVerified              Boolean  @default(false)
  totalTipsReceived       Float    @default(0)
  totalTipsReceivedUsd    Float    @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  tips                    TweetTip[]
  
  @@map("kol_wallets")
  @@index([kolUsername])
}

model TweetLike {
  id                      String   @id @default(cuid())
  tweetId                 String
  userId                  String?
  userAddress             String?
  userName                String?
  createdAt               DateTime @default(now())
  
  @@unique([tweetId, userId])
  @@unique([tweetId, userAddress])
  @@map("tweet_likes")
  @@index([tweetId])
  @@index([userId])
  @@index([createdAt])
}

model TweetComment {
  id                      String   @id @default(cuid())
  tweetId                 String
  userId                  String?
  userAddress             String?
  userName                String
  userAvatar              String?
  content                 String
  parentId                String?
  likesCount              Int      @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  parent                  TweetComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies                 TweetComment[] @relation("CommentReplies")
  
  @@map("tweet_comments")
  @@index([tweetId])
  @@index([userId])
  @@index([userAddress])
  @@index([parentId])
  @@index([createdAt])
}

model TweetTip {
  id                      String   @id @default(cuid())
  tweetId                 String
  kolUsername             String
  fromUserAddress         String
  fromUserName            String?
  amount                  Float
  cryptocurrency          String
  amountUsd               Float
  message                 String?
  txHash                  String?
  status                  String   @default("pending")
  completedAt             DateTime?
  createdAt               DateTime @default(now())
  
  kolWallet               KOLWallet @relation(fields: [kolUsername], references: [kolUsername], onDelete: Cascade)
  
  @@map("tweet_tips")
  @@index([tweetId])
  @@index([kolUsername])
  @@index([fromUserAddress])
  @@index([status])
  @@index([createdAt])
}
