generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/smart_money_tracker/app/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  username      String?  @unique
  email         String?  @unique
  name          String?
  password      String?
  profileImage  String?  // URL to profile image
  xHandle       String?  // X (formerly Twitter) handle
  gameMoney     Int      @default(0)  // Changed from gameCoins to gameMoney
  gameLevel     Int      @default(1)
  gameExp       Int      @default(0)
  isAdmin       Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // NextAuth fields for compatibility
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Cryptocurrency {
  id                String             @id @default(cuid())
  symbol            String             @unique
  name              String
  coinGeckoId       String             @unique
  marketCap         BigInt?
  price             Float?
  volume24h         Float?
  priceChange24h    Float?
  rank              Int?
  isActive          Boolean            @default(true)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  
  priceHistories    PriceHistory[]
  whaleTransactions WhaleTransaction[]

  @@map("cryptocurrencies")
}

model PriceHistory {
  id             String         @id @default(cuid())
  cryptoId       String
  price          Float
  marketCap      BigInt?
  volume         Float?
  timestamp      DateTime
  
  cryptocurrency Cryptocurrency @relation(fields: [cryptoId], references: [id], onDelete: Cascade)
  
  @@map("price_histories")
  @@index([cryptoId, timestamp])
}

model WhaleTransaction {
  id                String         @id @default(cuid())
  txHash            String         @unique
  blockNumber       BigInt?
  cryptoId          String
  fromAddress       String
  toAddress         String
  value             String         // Store as string to handle large numbers
  valueUsd          Float
  gasUsed           BigInt?
  gasPrice          BigInt?
  timestamp         DateTime
  blockchain        String
  isAlert           Boolean        @default(false)
  alertThreshold    Float?         // USD threshold that triggered alert
  
  cryptocurrency    Cryptocurrency @relation(fields: [cryptoId], references: [id], onDelete: Cascade)
  
  @@map("whale_transactions")
  @@index([cryptoId, timestamp])
  @@index([valueUsd, timestamp])
  @@index([fromAddress])
  @@index([toAddress])
}

model ExchangeFlow {
  id              String   @id @default(cuid())
  exchangeName    String
  cryptocurrency  String
  flowType        String   // "inflow" or "outflow"
  amount          String   // Store as string to handle large numbers
  amountUsd       Float
  timestamp       DateTime
  
  @@map("exchange_flows")
  @@index([exchangeName, cryptocurrency, timestamp])
  @@index([flowType, timestamp])
}

model WalletWatch {
  id          String   @id @default(cuid())
  address     String   @unique
  label       String?
  blockchain  String
  isWhale     Boolean  @default(false)
  balance     String?  // Current balance as string
  balanceUsd  Float?
  lastActive  DateTime?
  createdAt   DateTime @default(now())
  
  @@map("wallet_watches")
  @@index([blockchain, isWhale])
}

model DailyReport {
  id                    String   @id @default(cuid())
  date                  DateTime @unique @db.Date
  totalWhaleTransactions Int      @default(0)
  totalWhaleVolumeUsd   Float    @default(0)
  topCryptoByVolume     String?
  largestTransactionUsd Float?
  topExchangeInflow     String?
  topExchangeOutflow    String?
  marketSentiment       String?  // "bullish", "bearish", "neutral"
  reportData            Json?    // Store detailed report data
  createdAt             DateTime @default(now())
  
  @@map("daily_reports")
}

model AlertSubscription {
  id              String   @id @default(cuid())
  email           String
  alertType       String   // "whale_transaction", "exchange_flow", "daily_report"
  thresholdUsd    Float?   // Alert threshold in USD
  cryptocurrencies String[] // Array of crypto symbols to monitor
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  
  @@map("alert_subscriptions")
}

model BlockTransaction {
  id            String   @id @default(cuid())
  playerId      String
  playerName    String?  // Store player name for display
  blockId       String
  blockName     String
  blockType     String   // btc, eth, sol, etc.
  blockRarity   String   // common, rare, epic, legendary, secret
  transactionType String // "claim", "purchase", "steal", "sell"
  price         Int?     // Price paid (null for free claims)
  value         Int      // Block value in coins
  timestamp     DateTime @default(now())
  
  @@map("block_transactions")
  @@index([timestamp])
  @@index([playerId])
}

// Dash TV Models
model StreamerProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  displayName     String
  username        String   @unique
  bio             String?
  avatar          String?  // URL to avatar image
  bannerImage     String?  // Profile banner
  twitterHandle   String?
  telegramHandle  String?
  discordHandle   String?
  websiteUrl      String?
  category        String?  // Crypto Trading, DeFi, NFTs, etc.
  isVerified      Boolean  @default(false)
  followersCount  Int      @default(0)
  followingCount  Int      @default(0)
  totalStreams    Int      @default(0)
  totalViews      Int      @default(0)
  totalLikes      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  streams         Stream[]
  videos          Video[]
  likes           Like[]
  comments        Comment[]
  followers       Follow[]  @relation("Followers")
  following       Follow[]  @relation("Following")
  tipsReceived    Tip[]     @relation("ReceivedTips")
  walletConnection WalletConnection?
  
  @@map("streamer_profiles")
  @@index([username])
  @@index([userId])
}

model Stream {
  id              String   @id @default(cuid())
  streamerId      String
  title           String
  description     String?
  category        String
  thumbnailUrl    String?
  isLive          Boolean  @default(false)
  viewerCount     Int      @default(0)
  peakViewers     Int      @default(0)
  likesCount      Int      @default(0)
  commentsCount   Int      @default(0)
  startedAt       DateTime @default(now())
  endedAt         DateTime?
  duration        Int?     // In seconds
  streamKey       String?  @unique
  tags            String[]
  isPublic        Boolean  @default(true)
  allowChat       Boolean  @default(true)
  allowGifts      Boolean  @default(true)
  recordingUrl    String?  // URL to recorded stream
  
  streamer        StreamerProfile @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  likes           Like[]
  comments        Comment[]
  tips            Tip[]
  
  @@map("streams")
  @@index([streamerId, startedAt])
  @@index([isLive])
  @@index([category])
}

model Video {
  id              String   @id @default(cuid())
  streamerId      String
  title           String
  description     String?
  videoUrl        String   // Cloud storage path
  thumbnailUrl    String?
  category        String
  duration        Int?     // In seconds
  viewCount       Int      @default(0)
  likesCount      Int      @default(0)
  commentsCount   Int      @default(0)
  tags            String[]
  isPublic        Boolean  @default(true)
  uploadedAt      DateTime @default(now())
  
  streamer        StreamerProfile @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  likes           Like[]
  comments        Comment[]
  tips            Tip[]
  
  @@map("videos")
  @@index([streamerId, uploadedAt])
  @@index([category])
}

model Like {
  id          String   @id @default(cuid())
  userId      String
  streamId    String?
  videoId     String?
  createdAt   DateTime @default(now())
  
  user        StreamerProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  stream      Stream?         @relation(fields: [streamId], references: [id], onDelete: Cascade)
  video       Video?          @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  @@unique([userId, streamId])
  @@unique([userId, videoId])
  @@map("likes")
  @@index([streamId])
  @@index([videoId])
  @@index([userId])
}

model Comment {
  id          String   @id @default(cuid())
  userId      String
  streamId    String?
  videoId     String?
  content     String
  parentId    String?  // For nested replies
  likesCount  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        StreamerProfile @relation(fields: [userId], references: [id], onDelete: Cascade)
  stream      Stream?         @relation(fields: [streamId], references: [id], onDelete: Cascade)
  video       Video?          @relation(fields: [videoId], references: [id], onDelete: Cascade)
  parent      Comment?        @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[]       @relation("CommentReplies")
  
  @@map("comments")
  @@index([streamId, createdAt])
  @@index([videoId, createdAt])
  @@index([userId])
  @@index([parentId])
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  
  follower    StreamerProfile @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following   StreamerProfile @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)
  
  @@unique([followerId, followingId])
  @@map("follows")
  @@index([followerId])
  @@index([followingId])
}

model Tip {
  id              String   @id @default(cuid())
  fromUserId      String   // User sending the tip
  toStreamerId    String   // Streamer receiving the tip
  streamId        String?  // Optional: tip during a live stream
  videoId         String?  // Optional: tip on a video
  amount          Float    // Amount in crypto
  amountUsd       Float    // USD equivalent at time of tip
  cryptocurrency  String   // BTC, ETH, SOL, etc.
  txHash          String?  // Blockchain transaction hash
  walletAddress   String?  // Sender's wallet address
  message         String?  // Optional message with tip
  status          String   @default("pending") // pending, completed, failed
  completedAt     DateTime?
  createdAt       DateTime @default(now())
  
  toStreamer      StreamerProfile @relation("ReceivedTips", fields: [toStreamerId], references: [id], onDelete: Cascade)
  stream          Stream?         @relation(fields: [streamId], references: [id], onDelete: SetNull)
  video           Video?          @relation(fields: [videoId], references: [id], onDelete: SetNull)
  
  @@map("tips")
  @@index([toStreamerId, createdAt])
  @@index([fromUserId])
  @@index([streamId])
  @@index([videoId])
  @@index([status])
}

model WalletConnection {
  id              String   @id @default(cuid())
  userId          String   @unique
  streamerId      String   @unique
  walletAddress   String   // Primary wallet address for receiving tips
  walletType      String   // metamask, phantom, coinbase, etc.
  blockchain      String   // ethereum, solana, polygon, etc.
  qrCode          String?  // QR code image URL
  isVerified      Boolean  @default(false)
  isActive        Boolean  @default(true)
  totalTipsReceived Float  @default(0)
  totalTipsReceivedUsd Float @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  streamer        StreamerProfile @relation(fields: [streamerId], references: [id], onDelete: Cascade)
  
  @@map("wallet_connections")
  @@index([streamerId])
  @@index([walletAddress])
}
